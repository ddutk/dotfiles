# Filter sent items from GMail, marking as read
:0
* ^From.*cpence@gmail\.com|\
  ^From.*cpence@nd\.edu|\
  ^From.*charles@charlespence\.net
{
  foldername=sent
  
  :0 c
  $foldername/

  :0 ai
  * LASTFOLDER ?? ()\/[^/]+^^
  |mv "$LASTFOLDER" "$MAILDIR/sent/cur/$MATCH:2,S"
}

