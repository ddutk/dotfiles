# X configuration
xrdb -merge $HOME/.Xresources
setxkbmap -option ctrl:nocaps
xrandr --dpi 135
xscreensaver -no-splash &

# Default screen brightness
echo "908" > /sys/class/backlight/intel_backlight/brightness


# Notification daemon
dunst &

# SpaceFM daemon for automounts and desktop
spacefm --desktop &


# Start dock apps (mini-sleeps to keep them in order, these are supposed
# to hang execution of the whole script so that Openbox doesn't start
# running /etc/xdg/autostart/* or ~/.config/autostart/* before docker is
# up and running)
lal &

sleep 1
docker &

sleep 1
weatherboy -l 12777834 -u c -a &
