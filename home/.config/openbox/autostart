# Desktop ASAP
sh ~/.fehbg &

# X configuration
xrdb -merge $HOME/.Xresources
setxkbmap -option ctrl:nocaps
xautolock -time 15 -locker i3lock-wrapper &
xset -dpms &
xset s off &

# PulseAudio
~/bin/start-pulseaudio &

# Compositor
compton -b --config ~/.config/compton.conf &

# Notification daemon and Polkit logins
/usr/lib/mate-notification-daemon/mate-notification-daemon &
lxpolkit &

# PCManFM daemon for automounts
pcmanfm -d &

# System tray
trayer --edge top --align left --distance 1920 --distancefrom left --widthtype request --heighttype request --transparent true --tint 0x303030 --alpha 0 --expand true --SetPartialStrut false --SetDockType true &
