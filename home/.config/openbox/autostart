# X configuration
xrdb -merge $HOME/.Xresources
setxkbmap -option ctrl:nocaps
xrandr --dpi 135
xscreensaver -no-splash &

# Notification daemon
dunst &

# SpaceFM daemon for automounts and desktop
spacefm --desktop &

# System tray
trayer --edge top --align left --widthtype request --heighttype request --transparent true --expand true --alpha 255 --SetPartialStrut false --SetDockType false &
