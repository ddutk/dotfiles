# Reset the background
nitrogen --restore &

# Start a Polkit authentication agent
lxpolkit &

# Start the clock
lal -t Hack &

# Start the system tray
stalonetray --kludges force_icons_size &

# Start the automounter
udiskie -ant2 &

# Start battery icons, if we're on the laptop
command -v cbatticon >/dev/null 2>&1 && { cbatticon -n BAT0 & }
command -v cbatticon >/dev/null 2>&1 && { cbatticon -n BAT1 & }

# Wake-up daemon, also for the laptop
caffeine &

# Start the notification daemon
dunst &
