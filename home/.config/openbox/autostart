# X configuration
xrdb -merge $HOME/.Xresources
setxkbmap -option ctrl:nocaps
xscreensaver -no-splash &

# Notification daemon
dunst &

# SpaceFM daemon for automounts and desktop
spacefm --desktop &

# System tray
trayer --edge top --align left --distance 1920 --distancefrom left --widthtype request --heighttype request --transparent true --tint 0x303030 --alpha 0 --expand true --SetPartialStrut false --SetDockType false &

# Volume control
(sleep 2 && pnmixer) &

