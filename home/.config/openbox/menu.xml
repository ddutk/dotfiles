<menu id="openbox-config-menu" label="Openbox Config">
  <item label="Edit menu.xml" icon="/usr/share/icons/elementary/actions/48/bookmark-new.svg">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/menu.xml</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Edit rc.xml" icon="/usr/share/icons/elementary/mimes/48/text-x-makefile.svg">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/rc.xml</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="OBConf" icon="/usr/share/icons/elementary/categories/48/preferences-desktop.svg">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Reconfigure Openbox" icon="/usr/share/icons/elementary/actions/48/view-refresh.svg">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="xdg-pipe-menu" label="XDG Menu" execute="xdg_menu --format openbox3-pipe --root-menu /etc/xdg/menus/arch-applications.menu" />

<menu id="system-menu" label="System">
  <item label="ARandR" icon="/usr/share/icons/elementary/categories/32/preferences-desktop-display.svg">
    <action name="Execute">
      <command>arandr</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Graphical Disk Map" icon="/usr/share/icons/elementary/devices/48/drive-harddisk.svg">
    <action name="Execute">
      <command>gdmap</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Manage Cups Printers" icon="/usr/share/icons/elementary/devices/48/printer.svg">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify><enabled>no</enabled></startupnotify>
    </action>
  </item>
  <item label="GParted" icon="/usr/share/icons/hicolor/scalable/apps/gparted.svg">
    <action name="Execute">
      <command>pkexec gparted</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator />
  <item label="Set Wallpaper" icon="/usr/share/icons/elementary/categories/32/preferences-desktop-wallpaper.svg">
    <action name="Execute">
      <command>nitrogen</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Screensaver Properties" icon="/usr/share/icons/elementary/categories/22/preferences-desktop-effects.svg">
    <action name="Execute">
      <command>xscreensaver-demo</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <menu id="openbox-config-menu" icon="/usr/share/icons/elementary/actions/48/window-new.svg" />
  <separator />
  <menu id="xdg-pipe-menu" icon="/usr/share/icons/elementary/places/48/distributor-logo.svg" />
</menu>

<menu id="root-menu" label="Openbox 3">
  <showIcons>yes</showIcons>

  <separator label="Applications" />
  <item label="Terminal" icon="/usr/share/icons/elementary/apps/48/utilities-terminal.svg">
    <action name="Execute">
      <command>urxvt</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="PCManFM" icon="/usr/share/icons/elementary/apps/48/system-file-manager.svg">
    <action name="Execute">
      <command>pcmanfm -n /home/cpence</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Sublime Text" icon="/usr/share/icons/elementary/apps/48/accessories-text-editor.svg">
    <action name="Execute">
      <command>subl3</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Chromium" icon="/usr/share/icons/elementary/apps/48/internet-web-browser.svg">
    <action name="Execute">
      <command>chromium</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator/>
  <menu id="apps-productivity-menu" icon="/usr/share/icons/elementary/categories/48/applications-office.svg" />
  <menu id="apps-research-menu" icon="/usr/share/icons/elementary/categories/48/applications-libraries.svg" />
  <menu id="apps-graphics-menu" icon="/usr/share/icons/elementary/categories/48/applications-graphics.svg" />
  <menu id="apps-media-menu" icon="/usr/share/icons/elementary/categories/48/applications-multimedia.svg" />
  <menu id="system-menu" icon="/usr/share/icons/elementary/categories/48/applications-system.svg" />
  <separator />
  <item label="End Session" icon="/usr/share/icons/elementary/categories/32/preferences-system-session.svg">
    <action name="Execute">
      <command>sh -c '~/bin/end-session'</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
</menu>

</openbox_menu>
