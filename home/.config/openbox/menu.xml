<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/">

<menu id="apps-productivity-menu" label="Productivity">
  <item label="Writer" icon="/usr/share/icons/hicolor/scalable/apps/libreoffice-writer.svg">
    <action name="Execute">
      <command>lowriter</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Calc" icon="/usr/share/icons/hicolor/scalable/apps/libreoffice-calc.svg">
    <action name="Execute">
      <command>localc</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Impress" icon="/usr/share/icons/hicolor/scalable/apps/libreoffice-impress.svg">
    <action name="Execute">
      <command>loimpress</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator />
  <item label="VirtualBox" icon="/usr/share/icons/hicolor/24x24/mimetypes/virtualbox-vbox.png">
    <action name="Execute">
      <command>VirtualBox</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
</menu>

