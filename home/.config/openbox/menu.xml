<menu id="openbox-config-menu" label="Openbox Config">
  <item label="Edit menu.xml" icon="/usr/share/icons/Tango/22x22/actions/bookmark-new.png">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/menu.xml</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Edit rc.xml" icon="/usr/share/icons/Tango/22x22/mimetypes/text-x-script.png">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/rc.xml</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="OBConf" icon="/usr/share/icons/Tango/22x22/categories/preferences-desktop.png">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Reconfigure Openbox" icon="/usr/share/icons/Tango/22x22/actions/view-refresh.png">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="xdg-pipe-menu" label="XDG Menu" execute="xdg_menu --format openbox3-pipe --root-menu /etc/xdg/menus/arch-applications.menu" />

<menu id="system-menu" label="System">
  <item label="ARandR" icon="/usr/share/icons/Tango/22x22/apps/preferences-system-windows.png">
    <action name="Execute">
      <command>arandr</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Graphical Disk Map" icon="/usr/share/icons/Tango/22x22/devices/harddrive.png">
    <action name="Execute">
      <command>gdmap</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Manage Cups Printers" icon="/usr/share/icons/Tango/22x22/devices/printer.png">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify><enabled>no</enabled></startupnotify>
    </action>
  </item>
  <item label="GParted" icon="/usr/share/icons/hicolor/scalable/apps/gparted.svg">
    <action name="Execute">
      <command>pkexec gparted</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator />
  <item label="Screensaver Properties" icon="/usr/share/icons/Tango/22x22/apps/preferences-desktop-screensaver.png">
    <action name="Execute">
      <command>xscreensaver-demo</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <menu id="openbox-config-menu" icon="/usr/share/icons/Tango/22x22/apps/preferences-system-windows.png" />
  <separator />
  <menu id="xdg-pipe-menu" icon="/usr/share/icons/Tango/22x22/places/distributor-logo.png" />
</menu>

<menu id="root-menu" label="Openbox 3">
  <showIcons>yes</showIcons>

  <separator label="Applications" />
  <item label="Terminal" icon="/usr/share/icons/Tango/22x22/apps/utilities-terminal.png">
    <action name="Execute">
      <command>lilyterm</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="PCManFM" icon="/usr/share/icons/Tango/22x22/apps/system-file-manager.png">
    <action name="Execute">
      <command>pcmanfm -n /home/cpence</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Sublime Text" icon="/usr/share/icons/Tango/22x22/apps/accessories-text-editor.png">
    <action name="Execute">
      <command>subl3</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Chromium" icon="/usr/share/icons/Tango/22x22/apps/internet-web-browser.png">
    <action name="Execute">
      <command>chromium</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator/>
  <menu id="apps-productivity-menu" icon="/usr/share/icons/Tango/22x22/categories/applications-office.png" />
  <menu id="apps-research-menu" icon="/usr/share/icons/Tango/22x22/categories/applications-science.png" />
  <menu id="apps-graphics-menu" icon="/usr/share/icons/Tango/22x22/categories/applications-graphics.png" />
  <menu id="apps-media-menu" icon="/usr/share/icons/Tango/22x22/categories/applications-multimedia.png" />
  <menu id="system-menu" icon="/usr/share/icons/Tango/22x22/categories/applications-system.png" />
  <separator />
  <item label="End Session" icon="/usr/share/icons/Tango/22x22/apps/preferences-system-session.png">
    <action name="Execute">
      <command>sh -c '~/bin/end-session'</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
</menu>

</openbox_menu>
