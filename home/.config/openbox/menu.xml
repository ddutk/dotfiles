<menu id="openbox-config-menu" label="Openbox Config">
  <item label="Edit menu.xml">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/menu.xml</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Edit rc.xml">
    <action name="Execute">
      <command>subl3 ~/.config/openbox/rc.xml</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="OBConf">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="xdg-pipe-menu" label="XDG Menu" execute="xdg_menu --format openbox3-pipe --root-menu /etc/xdg/menus/arch-applications.menu" />

<menu id="system-menu" label="System">
  <item label="ARandR">
    <action name="Execute">
      <command>arandr</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Seahorse">
    <action name="Execute">
      <command>seahorse</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="fsv">
    <action name="Execute">
      <command>fsv2</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Manage Cups Printers">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify>
        <enabled>no</enabled>
        <icon>cups</icon>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Set Background">
    <action name="Execute">
      <command>nitrogen ~/Dropbox/Charles/Personal/Wallpaper</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <menu id="openbox-config-menu" />
  <separator />
  <menu id="xdg-pipe-menu" />
</menu>

<menu id="end-session-menu" label="End Session">
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <command>gksu 'systemctl reboot'</command>
      <startupnotify><enabled>no</enabled></startupnotify>
    </action>
  </item>
  <item label="Shut Down">
    <action name="Execute">
      <command>gksu 'systemctl poweroff'</command>
      <startupnotify><enabled>no</enabled></startupnotify>
    </action>
  </item>
</menu>

