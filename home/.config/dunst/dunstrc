[global]
    font = Droid Sans 8
    allow_markup = yes

    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes

    alignment = left
    bounce_freq = 0
    show_age_threshold = 60

    word_wrap = yes
    ignore_newline = no

    geometry = "0x5+0-1"
    transparency = 0
    monitor = 0
    follow = none

    idle_threshold = 120
    sticky_history = yes
    line_height = 0

    separator_height = 2
    padding = 8
    horizontal_padding = 8

    separator_color = frame

    startup_notification = false
    browser = /usr/bin/google-chrome

[frame]
    width = 3
    color = "#aaaaaa"

[shortcuts]
    close = mod4+BackSpace
    close_all = mod4+shift+BackSpace
    history = mod4+grave
    context = mod4+shift+period

[urgency_low]
    background = "#6d9cbe"
    foreground = "#000000"
    timeout = 3

[urgency_normal]
    background = "#a5c261"
    foreground = "#000000"
    timeout = 0

[urgency_critical]
    background = "#da4939"
    foreground = "#000000"
    timeout = 0


# Every section that isn't one of the above is interpreted as a rules
# to override settings for certain messages.
# Messages can be matched by 'appname', 'summary', 'body' or 'icon'
# and you can override the 'timeout', 'urgency', 'foreground', 'background'
# and 'format'.
# Shell-like globbing will get expanded.

[batti_charged]
    appname = batti
    summary = "Battery charged"
    urgency = low

[batti_charging]
    appname = batti
    summary = "Charging battery"
    urgency = low

[batti_discharging]
    appname = batti
    summary = "Discharging battery"
    urgency = low

[batti_low]
    appname = batti
    summary = "Low battery level"
    urgency = critical

[kalu_failures_ignore]
    appname = kalu
    summary = "*nable to check*"
    format = ""

[kalu_available]
    appname = kalu
    summary = "*updates available*"
    urgency = low

[dropbox_added]
    appname = Dropbox
    summary = "*added"
    urgency = low

[dropbox_updated]
    appname = Dropbox
    summary = "*updated"
    urgency = low

[dropbox_deleted]
    appname = Dropbox
    summary = "*deleted"
    urgency = low

[transmission_done]
