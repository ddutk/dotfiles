#!/bin/sh
# Back up my bookmarks from Delicious

source ${HOME}/bin/backup/utilities.sh
OUTDIR="$HOME/Storage/Backup/"

# Get the file with the Delicious password
get_private_file delicious-pass delicious-pass

curl -k --user `cat ~/delicious-pass` -o bookmarks.xml -O 'https://api.del.icio.us/v1/posts/all'

# Remove the file
release_private_file delicious-pass

# Compress and save to backup directory
lzma -9 bookmarks.xml
mv bookmarks.xml.lzma $OUTDIR

