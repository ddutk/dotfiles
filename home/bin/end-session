#!/bin/bash

answer=`echo -e "Shut Down\nReboot\nLog Out" | rofi -dmenu -p 'Would you like to shut down?' -i -no-custom`

if [[ "$answer" == "Log Out" ]]; then
  # Log out
  openbox --exit
elif [[ "$answer" == "Reboot" ]]; then
  # Reboot
  sudo reboot
elif [[ "$answer" == "Shut Down" ]]; then
  # Shut down
  sudo poweroff
fi

