#!/bin/bash

answer=$(zenity --list --radiolist --text="Would you like to shut down?" --column " " --column "Action" TRUE "Shut Down" FALSE "Reboot" FALSE "Log Out")

if [[ "$answer" == "Log Out" ]]; then
  # Log out
  openbox --exit
elif [[ "$answer" == "Reboot" ]]; then
  # Reboot
  sudo reboot
elif [[ "$answer" == "Shut Down" ]]; then
  # Shut down
  sudo poweroff
fi

