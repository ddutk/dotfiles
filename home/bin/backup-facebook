#!/bin/sh
# Re-pack and backup Facebook from a ZIP

OUTDIR="/mnt/truecrypt1/Backup/"

echo "DOWNLOAD the Facebook ZIP archive and unzip it in the current directory."
read -p "Press any key to continue..."

tar cvf facebook.tar charles.pence
rm -r charles.pence
xz -9 facebook.tar
mv facebook.tar.xz $OUTDIR
