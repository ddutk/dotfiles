#!/bin/sh
# Way simpler version of the too-complex MultiMarkdown mmd2pdf command.

multimarkdown -b -t latex "$1"
latexmk "`basename "$1" .md`.tex"
latexmk -c "`basename "$1" .md`.tex"
rm "`basename "$1" .md`.tex"

# latexmkrc seems to ignore my value for $clean_ext, leaving files even if
# they're present.  Nuke them manually.
for ext in synctex.gz bbl snm nav pyg ist xdy fls glg glo log log out toc
do
  rm -f "`basename "$1" .md`.$ext"
done
