# Lua extensions
lua_load ~/.conky_lua_scripts.lua

# Enable XFT
use_xft yes
xftfont Monospace:size=6
xftalpha 0.8
override_utf8_locale yes

# Run in the background, not on the terminal
background yes
out_to_console no

# Update every 2 seconds, forever
update_interval 2
total_run_times 0

# Draw a desktop-level window
double_buffer yes
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Top-right of the screen, please
alignment top_right
gap_x 5
gap_y 5
minimum_size 1000 30
maximum_width 1000

# Shade, but don't outline or border
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders yes

# Set colors and visuals
default_color white
default_shade_color gray24
stippled_borders 2
short_units yes

# Smooth out some of the values
cpu_avg_samples 2
net_avg_samples 2


TEXT
${alignr}${execpi 300 ~/.private/conky-gmail} (E) \
 ${battery} ${battery_time} (B) \
 ${platform coretemp.0 temp 2}°C (C) \
 ${platform coretemp.0 temp 1}°C (M) \
${lua_parse pad3 ${cpu cpu0}}% (U) \
${lua_parse pad3 $memperc}% (R) \
${lua_parse pad3 $swapperc}% (S) \
  ${time %a, %b %-e | %H:%M}
