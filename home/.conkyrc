# Lua extensions
lua_load ~/.conky_lua_scripts.lua

# Enable XFT
use_xft yes
xftfont Consolas:size=13
xftalpha 1
override_utf8_locale yes

# Run in the background, not on the terminal
background no
out_to_console no

# Update every 2 seconds, forever
update_interval 2
total_run_times 0

# Draw a desktop-level window
double_buffer yes
own_window yes
own_window_type normal
own_window_transparent no
own_window_colour gray19
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Top of the screen, please
alignment top_left
gap_x 1925
gap_y 2
minimum_size 1920 16

# Outline the text to be visible on any wallpaper
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes

# Set colors and visuals
default_color gray82
default_outline_color gray24
default_shade_color gray24
short_units yes

# Smooth out some of the values
cpu_avg_samples 2
net_avg_samples 2


TEXT
${alignr}${offset -60}  \
 ${hwmon temp 2}째C ${voffset 0}${font StyleBats:size=13}A${font}${voffset -1} \
 ${hwmon temp 3}째C ${voffset 0}${font StyleBats:size=13}A${font}${voffset -1} \
 ${hwmon temp 4}째C ${voffset 0}${font StyleBats:size=13}A${font}${voffset -1} \
 ${hwmon temp 5}째C ${voffset 0}${font StyleBats:size=13}A${font}${voffset -1} \
        ${lua_parse pad3 ${cpu cpu0}}% ${voffset 0}${font StyleBats:size=13}I${font}${voffset -1}\
 ${lua_parse pad3 $memperc}% ${voffset 0}${font StyleBats:size=13}J${font}${voffset -1}\
 ${lua_parse pad3 $swapperc}% ${font StyleBats:size=13}T${font}\
        ${voffset -6}${font Segoe UI:size=13}${time %a, %b %-e}${font} | ${time %H:%M}
